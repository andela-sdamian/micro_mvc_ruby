<h1>New Task</h1>

<form action="/task/create" method="post">
  <label for="ttile">Title</label>
  <br/>
  <input type="text" name="task[title]" value="" required>
  <br /><br />
  <label for="body">Description</label><br />
  <textarea name="task[body]" cols="30" rows="10" required></textarea>
  <br /><br />
  <label>Status</label>
  <br />
      <label><input type="radio" name="task[status]" value="done">Done</label> 
      <label><input type="radio" name="task[status]" value="pending" checked> Pending</label>
  <br /><br />
  <button type="submit">Create Task</button>
</form>

<a href="/">Back </a>
